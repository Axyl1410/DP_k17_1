<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1200.0"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" 
      xmlns="http://javafx.com/javafx/24.0.1"
      fx:controller="vn.giadinh.phonghoc.presentation.view.RegisterView"
      alignment="CENTER" spacing="20">

    <!-- Main Container -->
    <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 0);" 
           maxWidth="400" maxHeight="650" alignment="CENTER" spacing="20">
        
        <!-- Header -->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 20 20 20;">
            <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Đăng Ký"/>
            <Label style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" text="Tạo tài khoản mới"/>
        </VBox>

        <!-- Register Form -->
        <VBox spacing="15" style="-fx-padding: 0 30 30 30;" maxWidth="350">
            
            <!-- Full Name Field -->
            <VBox spacing="5">
                <Label text="Họ và tên" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="fullNameField" promptText="Nhập họ và tên" 
                          style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Tên đăng nhập" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" 
                          style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Email Field -->
            <VBox spacing="5">
                <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <TextField fx:id="emailField" promptText="Nhập email" 
                          style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Mật khẩu" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu (ít nhất 6 ký tự)" 
                              style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Confirm Password Field -->
            <VBox spacing="5">
                <Label text="Xác nhận mật khẩu" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Nhập lại mật khẩu" 
                              style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>
            
            <!-- Terms and Conditions Checkbox -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="termsCheckBox" text="Tôi đồng ý với điều khoản sử dụng" 
                          style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
            </HBox>
            
            <!-- Register Button -->
            <Button fx:id="registerButton" text="Đăng Ký" 
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15; -fx-background-radius: 5; -fx-font-size: 14;"
                    maxWidth="Infinity"/>
            
            <!-- Divider -->
            <Separator style="-fx-background-color: #ecf0f1;"/>
            
            <!-- Login Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Đã có tài khoản?" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;"/>
                <Hyperlink fx:id="loginLink" text="Đăng nhập ngay" 
                           style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 12;"/>
            </HBox>
        </VBox>
    </VBox>
    
    <!-- Status Label -->
    <Label fx:id="statusLabel" style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-background-color: rgba(231, 76, 60, 0.1); -fx-padding: 10; -fx-background-radius: 5;" 
           visible="false" maxWidth="400" wrapText="true" alignment="CENTER"/>

</VBox>
