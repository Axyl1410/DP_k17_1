<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefHeight="800.0" prefWidth="1200.0"
      spacing="20"
      style="-fx-background-color: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="vn.giadinh.phonghoc.presentation.view.LoginView">

    <!-- Main Container -->
    <VBox alignment="CENTER" maxHeight="500" maxWidth="350" spacing="20"
          style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 10, 0, 0, 0);">

        <!-- Header -->
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 30 20 20 20;">
            <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Đăng Nhập"/>
            <Label style="-fx-font-size: 14; -fx-text-fill: #7f8c8d;" text="Vui lòng đăng nhập để tiếp tục"/>
        </VBox>

        <!-- Login Form -->
        <VBox maxWidth="300" spacing="20" style="-fx-padding: 0 30 30 30;">

            <!-- Username Field -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tên đăng nhập"/>
                <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập"
                           style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mật khẩu"/>
                <PasswordField fx:id="passwordField" promptText="Nhập mật khẩu"
                               style="-fx-padding: 12; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>

            <!-- Remember Me Checkbox -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <CheckBox fx:id="rememberMeCheckBox" style="-fx-text-fill: #7f8c8d;" text="Ghi nhớ đăng nhập"/>
            </HBox>

            <!-- Login Button -->
            <Button fx:id="loginButton" maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 15; -fx-background-radius: 5; -fx-font-size: 14;"
                    text="Đăng Nhập"/>

            <!-- Forgot Password Link -->
            <HBox alignment="CENTER">
                <Hyperlink fx:id="forgotPasswordLink" style="-fx-text-fill: #3498db; -fx-font-size: 12;"
                           text="Quên mật khẩu?"/>
            </HBox>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" text="Chưa có tài khoản?"/>
                <Hyperlink fx:id="registerLink"
                           style="-fx-text-fill: #3498db; -fx-font-weight: bold; -fx-font-size: 12;"
                           text="Đăng ký ngay"/>
            </HBox>
        </VBox>
    </VBox>

    <!-- Status Label -->
    <Label fx:id="statusLabel" alignment="CENTER" maxWidth="350"
           style="-fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-background-color: rgba(231, 76, 60, 0.1); -fx-padding: 10; -fx-background-radius: 5;"
           visible="false" wrapText="true"/>

</VBox>
