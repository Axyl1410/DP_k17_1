<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="800.0" prefWidth="1200.0"
      style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="vn.giadinh.phonghoc.presentation.view.ListRoomView">

    <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;" text="Quản lý phòng học"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="logoutButton" prefHeight="35.0" prefWidth="100.0"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                text="Đăng xuất"/>
    </HBox>


    <VBox spacing="10.0"
          style="-fx-background-color: white; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 3, 0, 0, 0);">
        <Label style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Tìm kiếm và Lọc"/>

        <HBox alignment="CENTER_LEFT" spacing="15.0">
            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Từ khóa:"/>
                <TextField fx:id="searchField" prefHeight="35.0" prefWidth="200.0" promptText="Nhập từ khóa tìm kiếm..."
                           style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Dãy nhà:"/>
                <ComboBox fx:id="buildingFilter" prefHeight="35.0" prefWidth="150.0" promptText="Chọn dãy nhà"
                          style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Trạng thái:"/>
                <ComboBox fx:id="statusFilter" prefHeight="35.0" prefWidth="150.0" promptText="Chọn trạng thái"
                          style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Ánh sáng:"/>
                <ComboBox fx:id="lightFilter" prefHeight="35.0" prefWidth="120.0" promptText="Chọn ánh sáng"
                          style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Tìm kiếm:"/>
                <Button fx:id="searchButton" prefHeight="35.0" prefWidth="100.0"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                        text="Tìm kiếm"/>
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Làm mới:"/>
                <Button fx:id="refreshButton" prefHeight="35.0" prefWidth="100.0"
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                        text="Làm mới"/>
            </VBox>
        </HBox>
    </VBox>
    <HBox spacing="20.0" style="-fx-padding: 20;">
        <VBox maxWidth="400.0" prefWidth="400.0" spacing="15.0"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 0);">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"
                   text="Thông tin phòng học"/>

            <VBox spacing="12.0">
                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Mã phòng:"/>
                    <TextField fx:id="idField" editable="false" prefHeight="35.0"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Dãy nhà:"/>
                    <TextField fx:id="buildingBlockField" prefHeight="35.0"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                           text="Diện tích (m²):"/>
                    <TextField fx:id="areaField" prefHeight="35.0"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                           text="Số bóng đèn:"/>
                    <TextField fx:id="numLightBulbsField" prefHeight="35.0"
                               style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
                </VBox>

                <VBox spacing="5.0">
                    <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                           text="Ngày hoạt động:"/>
                    <DatePicker fx:id="startDatePicker" prefHeight="35.0" prefWidth="400.0"
                                promptText="Chọn ngày hoạt động"
                                style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 8;"/>
                </VBox>

                <HBox spacing="10.0">
                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                               text="Ánh sáng:"/>
                        <ComboBox fx:id="lightField" prefHeight="35.0" prefWidth="200.0" promptText="Chọn ánh sáng"
                                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
                    </VBox>

                    <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                        <Label style="-fx-font-size: 12; -fx-font-weight: bold; -fx-text-fill: #34495e;"
                               text="Trạng thái:"/>
                        <ComboBox fx:id="statusField" prefHeight="35.0" prefWidth="200.0" promptText="Chọn trạng thái"
                                  style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #bdc3c7; -fx-border-width: 1;"/>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 15 0 0 0;">
                    <Button fx:id="addButton" prefHeight="35.0" prefWidth="80.0"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                            text="Thêm"/>
                    <Button fx:id="updateButton" prefHeight="35.0" prefWidth="80.0"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                            text="Cập nhật"/>
                    <Button fx:id="clearButton" prefHeight="35.0" prefWidth="80.0"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6; -fx-padding: 8 16;"
                            text="Xóa form"/>
                </HBox>
            </VBox>
        </VBox>

        <VBox spacing="10.0"
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 0);"
              HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <Label style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 0 0 10 0;"
                   text="Danh sách phòng học"/>

            <TableView fx:id="roomTable"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #bdc3c7; -fx-border-width: 1;"
                       VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="roomId" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mã phòng"/>
                    <TableColumn fx:id="buildingBlock" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                 text="Dãy nhà"/>
                    <TableColumn fx:id="area" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Diện tích"/>
                    <TableColumn fx:id="numLightBulbs" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                 text="Số bóng đèn"/>
                    <TableColumn fx:id="startDateOfOperation" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                 text="Ngày hoạt động"/>
                    <TableColumn fx:id="sufficientLight" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                 text="Ánh sáng"/>
                    <TableColumn fx:id="isStandard" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                 text="Trạng thái"/>
                    <TableColumn fx:id="actionColumn" prefWidth="137.5999755859375"
                                 style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Thao tác"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
    <HBox>
        <Label fx:id="toast" style="-fx-padding: 15; -fx-text-fill: #00a6f4;">Test</Label>
    </HBox>
</VBox>
